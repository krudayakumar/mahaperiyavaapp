<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Demo" parent="Base.Theme.Demo">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="general_pading">
        <item name="android:padding">10sp</item>
    </style>

    <style name="general_circular_pading">

        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="top_block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:background">@color/safaron</item>
    </style>

    <style name="top_block_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

  <style name="block_text_saffron">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">30dp</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@color/safaron</item>
  </style>


  <style name="bottom_block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/safaron_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="bottom_block_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="bold_black_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="content_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="white_text_12">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="black_large_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/safaron</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="white_medium_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="black_small_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="white_small_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="fontawesome" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/safaron</item>
        <item name="android:textSize">14pt</item>

    </style>


    <style name="text_general_normal">
      <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
      <item name="android:textColor">@color/safaron</item>

    </style>

    <style name="text_general_bold">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/safaron</item>
    </style>

    <style name="button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/safaron</item>
        <item name="android:elevation">8dp</item>
        <item name="android:translationZ">8dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>
  <style name="button_more">
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@color/safaron</item>
    <item name="android:elevation">8dp</item>
    <item name="android:translationZ">8dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

  </style>
  <style name="CustomCheckBox">
    <item name="android:theme">@style/CheckBoxAppTheme</item>
  </style>

  <style name="CheckBoxAppTheme">
    <item name="android:colorAccent">@color/accent</item>
    <item name="android:colorControlNormal">@color/primary</item>
    <item name="android:colorControlHighlight">@color/primaryDark</item>
  </style>
</resources>
