<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center_vertical|center_horizontal"
  android:orientation="vertical"

  >

  <LinearLayout
    android:id="@+id/llacharaya70"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"

    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="2">

    <!--<com.kanchi.periyava.Component.CircularImageView
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_gravity="center"
      android:src="@drawable/perivaya_sitting" />-->

    <ImageView
      android:id="@+id/acharaya_image"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_gravity="center"
      android:src="@drawable/acharaya70" />

    <TextView
      android:id="@+id/acharaya_name"
      style="@style/saffron_medium_text"
      android:textStyle=""
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"

      android:text="Sri Sankara Vijayendra Saraswati Swamigal" />
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/safaron" />

</LinearLayout>
